extends ./layouts/layouts.pug

block title
  | Liên hệ

block content
  .container
    include components/_breadcrumb
    section
      +n-header-title-2("Liên hệ")
      .row
        .col-md-8
          iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3833.7157431063397!2d108.21780491485862!3d16.080233988874124!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3142183be28239a9%3A0x31b1ff8a6913b174!2zMTYgTMO9IFRoxrDhu51uZyBLaeG7h3QsIFRo4bqhY2ggVGhhbmcsIEjhuqNpIENow6J1LCDEkMOgIE7hurVuZyA1NTAwMDA!5e0!3m2!1svi!2s!4v1553134930691", width="100%", height="400", frameborder="0", style="border:0", allowfullscreen="")
          form.contact-form.mt-5
            +input("Your name", "text")
            +input("Your email", "email")
            +input("Subject", "subject")
            +textarea("Your Message", "8")
            .offset-sm-2
              button.btn.btn-primary.btn-wine.mx-1.text-uppercase(type='submit') Gửi
        .col-md-4
          a(href="#")
            img(src="../assets/images/logo.png", alt="Logo")
          .location
            .d-flex.mb-3
              i.location__icon.fas.fa-map-marker-alt
              | Tầng 4, Tòa nhà Hanoi Group Số 442 Đội Cấn, P. Cống Vị, Q. Ba Đình, Hà Nội
            .d-flex.mb-3
              i.location__icon.fas.fa-phone
              | (04) 3768 9804
            .d-flex.mb-3
              i.location__icon.fas.fa-envelope
              | support@milano.com
          h5.text-uppcase FOLLOW US:
          - var socialArr = ['fa-facebook-f', 'fa-google-plus-g', 'fa-twitter', 'fa-youtube']
          .social-icon
            ul.list-unstyled.d-flex
              each data in socialArr
                li.social-icon__item
                  a(href="#")
                    i.fab(class= data)
