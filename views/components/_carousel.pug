#carouselDrink.carousel.slide(data-ride='carousel')
  ol.carousel-indicators
    li.active(data-target='#carouselDrink', data-slide-to='0')
    li(data-target='#carouselDrink', data-slide-to='1')
    li(data-target='#carouselDrink', data-slide-to='2')
  .carousel-inner
    .carousel-item.active
      img.d-block.w-100(src='../../assets/images/slider/slider_01.jpg', alt='First')
    .carousel-item
      img.d-block.w-100(src='../../assets/images/slider/slider_02.jpg', alt='Second')
    .carousel-item
      img.d-block.w-100(src='../../assets/images/slider/slider_03.jpg', alt='Third')
